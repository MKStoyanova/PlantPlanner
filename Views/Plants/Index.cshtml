@model IEnumerable<PlantPlanner.Models.Plant>

@{
    ViewData["Title"] = "Plants";
}

<h1>Plants</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add plant</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Light</th>
            <th>Days until it needs water</th>
            <th>Location</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@item.Light</td>
                <td>@item.WaterIntervalDays</td>
                <td>@item.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
